@using stdblog.Models

@{
    ViewBag.Title = "test";
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/bootstrap/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">
    <link href="~/OurContent/StyleSheet.css" rel="stylesheet" />
    <title>Sam is my name </title>
</head>
<body class=" container-fluid col-lg-12" style="background-color:lightgray">

    <div class="row">
        <div class="wrapper">

            <div class="col-lg-2">
                <nav id="sidebar" style=" background-color:black; color :white; width:200px; height:560px">


                    <div class="sidebar-header" style="height:50px; background-color:black">
                        @*<h3>S-WAVE</h3>*@
                    </div>


                    <ul class="list-unstyled components">

                        <li class="active">
                            <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Home</a>
                            <ul class="collapse list-unstyled" id="homeSubmenu" style="background-color:gray">
                                <li>
                                    <a href="/">home1</a>
                                </li>
                                <li>
                                    <a href="#">home2</a>
                                </li>
                                <li>
                                    <a href="#">home3</a>
                                </li>
                            </ul>
                        </li>

                        <li>
                            <a href="#">About</a>
                        </li>
                        <li>
                            <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Page</a>
                            <ul class="collapse list-unstyled" id="pageSubmenu">
                                <li>
                                    <a href="#">page1</a>
                                </li>
                                <li>
                                    <a href="#">page2</a>
                                </li>
                                <li>
                                    <a href="#">page3</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#">Services</a>
                        </li>
                        <li>
                            <a href="#">Contact Us</a>
                        </li>
                    </ul>

                    <ul class="list-unstyled CTAs">
                        <li>
                            <input class="glyphicon glyphicon-search" id="searchbar" type="text" style="width:100%; font-size:small; height:30px" placeholder="Search"/>
                        </li>
                        <li  style="padding-top: 10px; padding-left:40px; align-self:center">
                            <a href="#" class="search" style="font-size:15px;padding:5px; align-self:center; height:30px; width:150px;">Search</a>
                        </li>
                    </ul>
                </nav>
            </div>
         
                    <div class="content" style="padding-top:10px">
                        <div class="col-lg-8">
                            <div style="padding-left:80px;">
                                @using (var student = new studentDBase())
                                {
                                    foreach (var blog in student.blogposts)
                                    {
                                        <div>
                                            <img class="rounded-circle" id="imgcss" style="float:left; height:50px;  width:50px" src="~/Images/dp2.jpg" alt="image paceholder" />
                                            <div style="width:500px; padding-left: 60px">
                                                <p style="float:right;">@DateTime.Now.ToShortTimeString()</p>
                                                <h2 style="color:blue">
                                                    @Html.ActionLink(blog.author, "Home", "Account")
                                                </h2>
                                            </div>

                                            <div style="width:500px; padding-left: 60px">
                                                <p>@blog.content</p>
                                            </div>
                                            <div style="width:500px; padding-left: 60px; max-height:500px">
                                                <img style="width:500px" src="~/Images/paris1.jpg" />
                                            </div>

                                        </div>
                                        <br />
                                        <hr />
                                    }
                                }

                            </div>
                        </div>
                    </div>
               
                
            

</body>
    </html>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>



